<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.byelingual.projectzero.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">

        <TextView
            android:id="@+id/goodText"
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:layout_marginEnd="160dp"
            android:text="@string/byeworldApp"
            android:textAlignment="textStart"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="120"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/byeText"
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:text="@string/byeworld"
            android:elevation="8dp"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="16dp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="44dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimaryDark"
            android:elevation="2dp"
            android:gravity="center"
            android:minHeight="100dp"
            android:minWidth="100dp"
            android:text="@string/textTwoTxt"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="50sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="@string/buttonClicky"/>




    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
